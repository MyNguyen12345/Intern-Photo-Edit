<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5_dp">

    <ImageView
        android:id="@+id/image_sticker"
        android:layout_width="@dimen/dimen_50_dp"
        android:layout_height="@dimen/dimen_50_dp"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_save"
        android:layout_width="@dimen/dimen_10_dp"
        android:layout_height="@dimen/dimen_10_dp"
        android:layout_margin="@dimen/dimen_5_dp"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@drawable/ic_save"
        app:layout_constraintBottom_toBottomOf="@id/image_sticker"
        app:layout_constraintEnd_toEndOf="@id/image_sticker"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>